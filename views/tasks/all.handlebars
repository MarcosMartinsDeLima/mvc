<h1>Todas as tasks</h1>
<ul class="task-list">
    {{#each tasks}}
    <li>
        {{#if this.done}}
        <div class="actions">
        <form action="/tasks/view/{{this.id}}" method="get">
            <input type="hidden" name="id" value="this.id">
            <button type="submit">
                 <a class="title-done">{{this.title}}</a>
            </button>
        </form>
        </div>
     
        {{else}}
        <div class="actions">
        <form action="/tasks/view/{{this.id}}" method="get">
            <input type="hidden" name="id" value="this.id">
            <button type="submit">
                 <a class="title">{{this.title}}</a>
            </button>
        </form>
        
        </div>
         {{/if}}
        <div class="actions">
           <form action="/tasks/updatestatus" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <input type="hidden" name="done" value="{{this.done}}">
                <button type="submit">
                    <i class="bi bi-check2"></i>
                </button>
           </form>
            <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>
            <form action="/tasks/remove" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </div>
    </li>
    {{/each}}
</ul>